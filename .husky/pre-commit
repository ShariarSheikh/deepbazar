#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo '游游游Testing and building this project before commiting游游游'

## ---------------------------------------------------
pnpm run lint:fix ||
(
    echo 'Eslint file fixing failed'
    false 
)
echo "success 九九九九九九"


##----------------------------------------------------
pnpm run lint ||
(
    echo 'Eslint check failed'
    false;
)
echo "success 九九九九九九"


##----------------------------------------------------
pnpm run prettier:fix ||
(
    echo "Can't format code"
    false;
)
echo "success 九九九九九九"


##----------------------------------------------------
pnpm run prettier ||
(
    echo 'The format is disgusting'
    false;
)
echo "success 九九九九九九"


#If everything passes... try to run build
echo 'Your code looks good ---> trying to build it now游녨游녨游녨游녨游녨游녨'
##----------------------------------------------------
pnpm run build ||
(
    echo 'Your next build failed'
    false;
)
echo "PROJECT BUILT SUCCESSFULLY COMPLETE 游땙游땙游땙游땙游땙游땙"
